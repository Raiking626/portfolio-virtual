---
import { Image } from "astro:assets";
import EmptyCircle from "../icons/EmptyCircle.astro";
import FilledCircle from "../icons/FilledCircle.astro";

const { name, isActive, description, highlights, url, cover } = Astro.props;
const defaultUrlImage = "/img/Not_Found.jpg";

const { class: className } = Astro.props;
---
<article class={className}>
    <header class="flex flex-row items-center gap-1 mb-2">
        <a href={url ?? "#proyectos"} target={url ? "_blank" : null} rel="noopener noreferrer" class="text-lg font-semibold text-cyan-200/70">{name}</a> { (isActive) ? <FilledCircle class="text-green-600 size-3" /> : <EmptyCircle class="text-green-600 font-bold size-3" /> }
    </header>
    <section>
        <p class="mb-4 text-base font-normal text-gray-50S0 dark:text-gray-400 text-pretty">
            {description}
        </p>
    </section>
    <section>
        <ul class="flex flex-row gap-6 text-center items-center flex-wrap">
            {
                highlights.map((tasks: string[]) => (
                    <li class="rounded border border-white bg-white text-gray-700 px-1" >{tasks}</li>
                ))
            }
        </ul>
    </section>
    <footer class="pt-4 pr-2">
        {
            <Image src={cover ?? defaultUrlImage} alt={`Portada del proyecto ${name}`} 
            width={56} height={56} class="size-[100%]"
            format="jpg" quality={"max"} loading="lazy" />
        }
        
    </footer>
</article>